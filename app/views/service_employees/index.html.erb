<h1>Service Employees</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Service</th>
      <th>Is active</th>
      <th>Is primary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_employees.each do |service_employee| %>
      <tr>
        <td><%= service_employee.employee_id %></td>
        <td><%= service_employee.service_id %></td>
        <td><%= service_employee.is_active %></td>
        <td><%= service_employee.is_primary %></td>
        <td><%= link_to 'Show', service_employee %></td>
        <td><%= link_to 'Edit', edit_service_employee_path(service_employee) %></td>
        <td><%= link_to 'Destroy', service_employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

