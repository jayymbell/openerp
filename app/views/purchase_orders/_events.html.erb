<table class="table table-condensed table-striped">
<thead>
    <th>Action</th>
    <th>Actor</th>
    <th>Created At</th>
</thead>
<%@purchase_order.purchase_order_events.order(:created_at).each do |e|%>
<tr>
    <td><%=e.action%></td>
    <td><%=e.actor.person.name%></td>
    <td><%=e.created_at%></td>
</tr>
<%end%>
</table>