<label>Efforts</label>
    <div class="field">

      <table class="table table-striped table-condensed" id="purchaseOrderEfforts">
        <thead>
          <tr>
            <th>Employee</th>
            <th>Total</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <tr>
              <td style="width: 50%;">
              <%= select_tag :employee_id, 
          options_for_select(@available_employees.map {|d| [d.person.name, d.id] }), 
        {class: 'input-select2-basic', id: 'poe-employee'}%>
              </td>
              <td>
                <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text">$</div>
                </div>
                <input type="number" id="poe-total" class="poe-input form-control" step='0.01' value='0.00' placeholder='0.00'/>
              </div>
              </td>
              <td><a class="btn btn-outline-success" onClick="addPurchaseOrderEffort()">Add</td>
          </tr>
          <% @purchase_order.purchase_order_efforts.each_with_index do |poe, index| %>
            <tr id="poe-<%=index%>">
              <td style="width: 50;">
              <%= hidden_field_tag 'purchase_order[purchase_order_efforts_attributes]['+index.to_s+'][id]',poe.id%>
              <%= text_field_tag '', poe.employee.person.name, readonly: true%>
              </td>
              <td>
                <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text">$</div>
                </div>
                <%= number_field_tag 'purchase_order[purchase_order_efforts_attributes]['+index.to_s+'][total]',number_with_precision(poe.total, precision: 2), readonly: true, step: '0.01'%>
              </div>
              </td>
              <td>
              <a class="btn btn-outline-danger", onclick="removePurchaseOrderEffort('poe-<%=index%>')">Delete</a></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>

    <script>
  function addPurchaseOrderEffort(){
    var index = ($('#purchaseOrderEfforts tr').length - 2)
    var id = 'poe-' +  index
    $('#purchaseOrderEfforts').find('tbody')
    .append($('<tr>')
      .prop('id', id)
        .append($('<td>')
          .append($('<input>')
          .prop('readonly', 'true')
          .addClass('form-control')
          .prop('name',"purchase_order[purchase_order_efforts_attributes]["+index+"][employee_id]" )
          .prop('type', 'hidden')
          .val($('#poe-employee option:selected').val())
          )
          .append($('<input>')
          .prop('readonly', 'true')
          .addClass('form-control')
          .val($('#poe-employee option:selected').text())
          ))
        
        .append($('<td>')
          .append($('<div>')
          .addClass('input-group')
          .append($('<div>')
          .addClass('input-group-prepend')
          .append($('<div>')
          .text('$')
          .addClass('input-group-text')))
          .append($('<input>')
          .prop('readonly', 'true')
          .addClass('form-control')
          .prop('name',"purchase_order[purchase_order_efforts_attributes]["+index+"][total]" )
          .val($('#poe-total').val())
          )))
        

        .append($('<td>')
            .append($('<a>')
            .text('Delete')
            .addClass('btn btn-outline-danger')
            .click(function() {
              removePurchaseOrderEffort(id);
          }))
        
    ))
    $('.poe-input').val('')
    $('#poe-total').val('0.00')
  }

  function removePurchaseOrderEffort(id){
    $('#'+id).remove();
  }
</script>