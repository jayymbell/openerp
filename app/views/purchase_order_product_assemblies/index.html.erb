<h1>Purchase Order Product Assemblies</h1>

<table>
  <thead>
    <tr>
      <th>Purchase order</th>
      <th>Product assembly</th>
      <th>Quantity</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_order_product_assemblies.each do |purchase_order_product_assembly| %>
      <tr>
        <td><%= purchase_order_product_assembly.purchase_order_id %></td>
        <td><%= purchase_order_product_assembly.product_assembly_id %></td>
        <td><%= purchase_order_product_assembly.quantity %></td>
        <td><%= purchase_order_product_assembly.total %></td>
        <td><%= link_to 'Show', purchase_order_product_assembly %></td>
        <td><%= link_to 'Edit', edit_purchase_order_product_assembly_path(purchase_order_product_assembly) %></td>
        <td><%= link_to 'Destroy', purchase_order_product_assembly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

