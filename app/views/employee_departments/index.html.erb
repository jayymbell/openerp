<p id="notice"><%= notice %></p>

<h1>Employee Departments</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Department</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_departments.each do |employee_department| %>
      <tr>
        <td><%= employee_department.employee_id %></td>
        <td><%= employee_department.department_id %></td>
        <td><%= employee_department.is_active %></td>
        <td><%= link_to 'Show', employee_department %></td>
        <td><%= link_to 'Edit', edit_employee_department_path(employee_department) %></td>
        <td><%= link_to 'Destroy', employee_department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

