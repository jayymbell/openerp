<p id="notice"><%= notice %></p>

<h1>Employee Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Job</th>
      <th>Is active</th>
      <th>Is primary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_jobs.each do |employee_job| %>
      <tr>
        <td><%= employee_job.employee_id %></td>
        <td><%= employee_job.job_id %></td>
        <td><%= employee_job.is_active %></td>
        <td><%= employee_job.is_primary %></td>
        <td><%= link_to 'Show', employee_job %></td>
        <td><%= link_to 'Edit', edit_employee_job_path(employee_job) %></td>
        <td><%= link_to 'Destroy', employee_job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

