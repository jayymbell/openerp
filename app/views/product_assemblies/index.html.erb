<p id="notice"><%= notice %></p>

<h1>Product Assemblies</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Description</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_assemblies.each do |product_assembly| %>
      <tr>
        <td><%= product_assembly.product_id %></td>
        <td><%= product_assembly.name %></td>
        <td><%= product_assembly.description %></td>
        <td><%= product_assembly.is_active %></td>
        <td><%= link_to 'Show', product_assembly %></td>
        <td><%= link_to 'Edit', edit_product_assembly_path(product_assembly) %></td>
        <td><%= link_to 'Destroy', product_assembly, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

