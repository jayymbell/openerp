<h1>Purchase Order Services</h1>

<table>
  <thead>
    <tr>
      <th>Purchase order</th>
      <th>Service</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_order_services.each do |purchase_order_service| %>
      <tr>
        <td><%= purchase_order_service.purchase_order_id %></td>
