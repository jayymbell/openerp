        <td><%= purchase_order_service.total %></td>
        <td><%= link_to 'Show', purchase_order_service %></td>
        <td><%= link_to 'Edit', edit_purchase_order_service_path(purchase_order_service) %></td>
        <td><%= link_to 'Destroy', purchase_order_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

