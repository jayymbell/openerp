<p id="notice"><%= notice %></p>

<h1>Workflow States</h1>

<table>
  <thead>
    <tr>
      <th>Workflow</th>
      <th>Name</th>
      <th>Description</th>
      <th>Is start</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_states.each do |workflow_state| %>
      <tr>
        <td><%= workflow_state.workflow_id %></td>
        <td><%= workflow_state.name %></td>
        <td><%= workflow_state.description %></td>
        <td><%= workflow_state.is_start %></td>
        <td><%= link_to 'Show', workflow_state %></td>
        <td><%= link_to 'Edit', edit_workflow_state_path(workflow_state) %></td>
        <td><%= link_to 'Destroy', workflow_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workflow State', new_workflow_state_path %>
