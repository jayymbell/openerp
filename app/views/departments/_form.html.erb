<%= form_with(model: department, remote: true) do |form| %>
  <%= render 'layouts/form_errors', object: form.object %>
  <div class="row">
    <div class="col-sm-8">
      <div class="field">
        <%= form.hidden_field :is_active %>
      </div>
    </div>
    <div class="col-sm-4">
        <%= submit_btn(form,"float:right;")%>
    </div>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

    <div class="field">
    <%= form.label :parent_department_id %>
    <div class="field">
      <%= form.select :parent_department_id, 
        Department.all.map {|p| [p.name, p.id] }, 
        {prompt: ''},
        {class: 'input-select2-basic'}%>
    </div>
  </div>
<% end %>
