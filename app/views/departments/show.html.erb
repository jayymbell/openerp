<h1>Departments</h1>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <ul class="navbar-nav ml-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Actions
        </a>
        <div class="dropdown-menu dropdown-menu-right dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to 'Edit', edit_department_path(@department), class: 'dropdown-item', remote: true %>
          <%if @department.is_active%>
            <%= form_for @department, remote: true do |form| %>
              <%= form.hidden_field :is_active, value: false %>
              <%= form.submit 'Deactivate', class: 'dropdown-item text-danger', data: { confirm: 'Are you sure?' } %>
            <%end%>
          <%else%>
            <%= form_for @department, remote: true do |form| %>
              <%= form.hidden_field :is_active, value: true %>
              <%= form.submit 'Activate', class: 'dropdown-item text-success', data: { confirm: 'Are you sure?' } %>
            <%end%>
          <%end%>
        </div>
      </li>
    </ul>
</nav>
<%= render 'profile'%>
<ul class="nav nav-tabs" id="myTab" role="tablist" style="padding-top: 10px;">
    <li class="nav-item">
      <a class="nav-link active" id="employee-tab" data-toggle="tab" href="#employee" role="tab" aria-controls="employee" aria-selected="true">Employees</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="employee" role="tabpanel" aria-labelledby="employee-tab">
      <div class="container-fluid" style="padding-top: 10px;">
        <%= render 'employees'%>
      </div>
    </div>
</div>

